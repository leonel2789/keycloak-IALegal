# Configuración de Base de Datos PostgreSQL
POSTGRES_DB=keycloak
POSTGRES_USER=keycloak
POSTGRES_PASSWORD=keycloak123

# Configuración de Keycloak Admin
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin123

# Configuración de Keycloak
KC_HOSTNAME=localhost
KC_HOSTNAME_PORT=8080
KC_HOSTNAME_STRICT_HTTPS=false
KC_HTTP_ENABLED=true

# Para producción, cambiar estos valores:
# KC_HOSTNAME=tu-dominio.com
# KC_HOSTNAME_STRICT_HTTPS=true
# KC_HTTP_ENABLED=false

# Variables para la aplicación Front IA (copiar a tu proyecto React Native)
EXPO_PUBLIC_KEYCLOAK_URL=http://localhost:8080
EXPO_PUBLIC_KEYCLOAK_REALM=ia-legal
EXPO_PUBLIC_KEYCLOAK_CLIENT_ID=front-ia-client